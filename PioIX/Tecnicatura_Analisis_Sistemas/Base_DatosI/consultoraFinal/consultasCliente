(2)

	A)
	SELECT TITULO, FECHA_PUBLICACION FROM CONSULTORA.INFORMES
	INNER JOIN TEMAS ON INFORMES.FK_TEMA = TEMAS.ID_TEMA
	INNER JOIN USUARIOS ON INFORMES.FK_USUARIO = USUARIOS.ID_USUARIO
	ORDER BY FECHA_PUBLICACION DESC;


	B)
	SELECT FK_INFORME, COUNT(FK_INFORME) FROM COMENTARIOS
	GROUP BY FK_INFORME ORDER BY COUNT(FK_INFORME) DESC;
	
	
	C)
	SELECT FK_USUARIO, COUNT(FK_USUARIO) FROM INFORMES GROUP BY FK_USUARIO ORDER BY COUNT(FK_USUARIO) DESC;
	
	
	D)
	SELECT FK_INFORME, COUNT(FK_INFORME) FROM COMENTARIOS GROUP BY FK_INFORME ORDER BY COUNT(FK_INFORME) DESC LIMIT 0,3;
	
	 SELECT * FROM COMENTARIOS
	 RIGHT OUTER JOIN INFORMES ON COMENTARIOS.FK_INFORME = INFORMES.ID_INFORME
	 WHERE FK_INFORME IS NULL;
	 
